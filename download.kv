<InputLayout>:
    cols: 1
    GridLayout:
        cols: 2
        Label:
            text: 'Year'
        TextInput:
            id: year_id
            write_tab: False
        Label:
            text: 'folder name'
        TextInput:
            id: folder_id
            write_tab: False
        Label:
            text: 'ealiest date (YYYYMMDD)'
        TextInput:
            id: earliest_date
            write_tab: False
        Label:
            text: 'latest date (YYYYMMDD)'
        TextInput:
            id: latest_date
            write_tab: False
    Button:
        size_hint_y: 0.2
        text: 'Download files'
        on_press: root.run_files()
